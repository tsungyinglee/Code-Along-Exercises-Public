{
    "name": "R Data Science Environment",
    "build": {
        "dockerfile": "Dockerfile",
        // Update VARIANT to pick a specific R version: 4, 4.1, 4.0
        // More info: https://github.com/rocker-org/devcontainer-images/pkgs/container/devcontainer%2Ftidyverse
        "args": { "VARIANT": "4.4" }
    },

    // Install Dev Container Features. More info: https://containers.dev/features
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
        // Install JupyterLab and IRkernel.
        // More info: https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
        "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
            "version": "none",
            "installJupyterlab": true
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                // Add R, Jupyter and Python vscode extensions
                "REditorSupport.r",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-renderers",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "vsls-contrib.codetour",
                "GitHub.copilot",
                "quarto.quarto"
            ],
            "settings": {
                "keyboard.dispatch": "keyCode",
                "keyboard.layout": "US",
                "workbench.colorTheme": "Default Dark+",
                "terminal.integrated.defaultProfile.linux": "zsh",
                "[r]": {
                    "editor.fontSize": 14,
                    "editor.defaultFormatter": "REditorSupport.r",
                    "editor.formatOnSave": true,
                    "editor.autoIndent": "full",
                    "editor.indentSize": 2,
                    "files.exclude": {
                        "*.csv": true,
                        "*.doc": true,
                        "*.docx": true,
                        "*.parquet": true,
                        "*.pdf": true,
                        "*.rdata": true,
                        "*.RData": true,
                        "*.rds": true,
                        "*.RDS": true,
                        "*.xslsx": true,
                        "*.sas7bdat": true
                    }
                },
                "r.bracketedPaste": true,
                "r.alwaysUseActiveTerminal": true,
                "r.rterm.linux": "/usr/local/bin/R",
                "r.autoIndent": true,
                "r.formatting.indentation": 2
            },
            "keybindings": [
                {
                    "key": "cmd+Shift+m",
                    "command": "type",
                    "args": { "text": " |> " },
                    "when": "editorLangId == 'r' || editorTextFocus && editorLangId == 'quarto' || activeCustomEditorId == 'quarto.visualEditor'"
                },
                {
                    "key": "Alt+-",
                    "command": "type",
                    "args": { "text": " <- " },
                    "when": "editorLangId == 'r' || editorTextFocus && editorLangId == 'quarto' || activeCustomEditorId == 'quarto.visualEditor'"
                },
                {
                    "key": "cmd+Shift+m",
                    "command": "type",
                    "args": { "text": " |> " },
                    "when": "editorTextFocus && editorLangId == 'rmd'"
                },
                {
                    "key": "Alt+-",
                    "command": "type",
                    "args": { "text": " <- " },
                    "when": "editorTextFocus && editorLangId == 'rmd'"
                },
                {
                    "key": "cmd+Shift+m",
                    "command": "workbench.action.terminal.sendSequence",
                    "args": { "text": " |> " },
                    "when": "terminalFocus"
                },
                {
                    "key": "Alt+-",
                    "command": "workbench.action.terminal.sendSequence",
                    "args": { "text": " <- " },
                    "when": "terminalFocus"
                },
                {
                    "key": "alt+l",
                    "command": "workbench.action.terminal.clear",
                    "when": "terminalFocus"
                }
            ]
        }
    },

    // Forward Jupyter and RStudio ports
    "forwardPorts": [8787, 8888],
    "portsAttributes": {
        "8787": {
            "label": "Rstudio",
            "requireLocalPort": true,
            "onAutoForward": "ignore"
        },
        "8888": {
            "label": "Jupyter",
            "requireLocalPort": true,
            "onAutoForward": "ignore"
        }
    },

    // Use 'postAttachCommand' to run commands after the container is started.
    "postAttachCommand": "sudo /copy-rstudio-prefs.sh && sudo rstudio-server start"

    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root
    // "remoteUser": "root"
}